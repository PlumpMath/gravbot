body
{
	font-family: Raleway;
	font-weight: normal;
	font-style: normal;
	font-size: 32;
    top-margin: 5%;

}

.title
{
    margin: 50px;
}

h1
{
    text-align: center;
	font-weight: bold;
}

.menuitem
{
    margin: 20px;
}

button
{
	font-size: 18;
	text-align: left;
    background-decorator: image;
    background-image-src: inactivebutton.png;
}

button:hover
{
    background-image-src: hoverbutton.png;
}

button:active
{
    background-image-src: activebutton.png;
}
